			"label": "test:watch",
			"type": "npm",
			"script": "test:watch",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [],
			"detail": "Runs vitest in watch mode"
		},
		{
			"label": "Start Dev",
			"dependsOn": ["Start Dev Server", "TypeScript Watch"],
			"group": {
				"kind": "build",
